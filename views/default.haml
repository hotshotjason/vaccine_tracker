:javascript
  $(document).ready(function() {
    min = $('#time-left').text() || 0;
    timer = setInterval(function() {
      min -= 1
      $('#time-left').text(min);
    }, 60000);

    setInterval(function() {
      window.location.reload();
    }, 1200000);  // reload once per 20 min
  });

