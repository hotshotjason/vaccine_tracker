!!! 5
-#  layout.haml will automatically get called 
%html
  %head
    %title= @title
    %link{href: url("css/custom.css"), rel: "stylesheet", media: "screen"}
    %link{href: url("css/custom_chart.css"), rel: "stylesheet", media: "screen"}
    %link{href: url("css/simple-sidebar.css"), rel: "stylesheet", media: "screen"}
    %link{href: url("css/bootstrap.min.css"), rel: "stylesheet", media: "screen"}
    %link{href: url("css/bootstrap-responsive.min.css"), rel: "stylesheet", media: "screen"}
    %link{href: url("css/custom.css"), rel: "stylesheet", media: "screen"}
    %script{src: url("js/jquery-1.12.4.min.js")}
    %script{src: url("js/bootstrap.min.js")}
    %script{src: url("js/jquery.highlight-5.js")}
    %script{src: url("js/hammer.min.js")}
    %script{src: url("js/Chart.bundle.min.js")}
    - # chart.js pluggin chart zoom 0.1.3  requires Chart.js > 2.1
    %script{src: url("js/Chart.Zoom.min.js")}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{href: "/"} Vaccine Tracker
          %ul.nav
            %li.dropdown
              %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"}
                Vaccines
              %ul.dropdown-menu{"role" => "Chips"}
                - Vaccine.all_vaccines_array.each do |current_vaccine|
                  %li
                    %a{href: "/vaccine/#{current_vaccine.name}"} #{current_vaccine.description}
          %ul.nav.pull-right
            -if session_username
              %li.dropdown
                %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"}= session_username
                %ul.dropdown-menu
                  %li
                    %a{href: url("logout")} Logout
            -else
              %li
                %a{href: url("login")} Login

    .container
      =yield

